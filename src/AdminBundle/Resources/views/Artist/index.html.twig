{% extends '::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('adminCreateArtist') }}" class="btn btn-success pull-right btn-sm">Create Artist</a>
        </div>
    </div>
    <div class="row">
    <div class="col-lg-12">

        <div class="datatable-wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Artist ID</th>
                    <th>Name</th>
                    <th>Albums</th>
                    <th>Songs</th>
                </tr>
                </thead>
                <tbody>
                {%  for key , artist in artists %}
                    <tr class="odd gradeX">
                        <td>{{ key+1 }}</td>
                        <td><a href="{{ path('adminEditArtist', {artistId : artist.artistId}) }}">{{ artist.artistId }}</a></td>
                        <td>{{ artist.name }}</td>
                        <td class="center">{{ artist.albums|length }} (<a href="{{ path('adminArtistAlbums', { artistId : artist.artistId }) }}">albums</a>)</td>
                        <td class="center">{{ artist.songs|length }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

{% endblock %}