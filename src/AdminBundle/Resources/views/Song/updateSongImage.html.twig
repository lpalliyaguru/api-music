<script>
    $(function(){

        $api = $(' .image-cropper img').Jcrop({
            setSelect:   [0,0,250, 250],
            allowResize : true,
            allowSelect:false,
            onChange: updateCords,
            aspectRatio: 1/1
        });

        $('#banner-resize-form').validate({
            submitHandler : function (form) {
                $(form).ajaxSubmit({
                    success : function(data){
                        $('#modal-album-banner').modal('hide');
                        if($(form).find('[name=song]').val()=='null') {
                            $('.song-create-wrapper .song-image').attr('src' , data.path);
                            $('#image-hidden').val(data.path);
                        }
                        else {
                            $('.song-edit-wrapper .song-image').attr('src' , data.path);
                        }

                    }
                });
            }
        })
    });
    function updateCords(c){
        $('#banner-coors-hidden').val(JSON.stringify(c));
    }

</script>

<div class="modal fade" id="modal-album-banner" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-x-large" role="document">
        <form action="/admin/songs/{{ song ? song.id : 'null' }}/image/resize" method="post" id="banner-resize-form">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Upload a banner</h4>
                </div>
                <div class="modal-body image-cropper">
                    <img src="{{ image }}"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    <input type="hidden" name="image-coors-hidden" id="banner-coors-hidden">
                    <input type="hidden" name="song"  value="{{ song ? song.id : 'null' }}">
                    <input type="hidden" name="image" value="{{ image }}">
                </div>
            </div>
        </form>
    </div>
</div>