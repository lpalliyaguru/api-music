{% extends '::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('adminCreateAlbum') }}" class="btn btn-success pull-right btn-sm">Create Album</a>
        </div>
    </div>
    <div class="row">
    <div class="col-lg-12">

        <div class="datatable-wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Album ID</th>
                    <th>Name</th>

                </tr>
                </thead>
                <tbody>
                {%  for key , album in albums %}
                    <tr class="odd gradeX">
                        <td>{{ key+1 }}</td>
                        <td><a href="{{ path('adminAlbum', {albumId : album.albumId}) }}">{{ album.albumId }}</a></td>
                        <td>{{ album.name }}</td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

{% endblock %}